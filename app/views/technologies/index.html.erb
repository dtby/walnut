<div class="container">
	<ol class="courses-bread breadcrumb">
	<span><i class="iconfont">&#xe60a;</i></span>
	<li><%= link_to "课程中心", courses_path %></li>
	<li class="active">技术体系</li>
	</ol>
	<%= render partial: "share/category" %>
	<div class="row">
		<div class="title-bar">
			<h4 class="text-center title">体系选择</h4>
			<div class="line"></div>
		</div>
		<div class="col-xs-12 system">
			<% @technolgies.each do |technology| %>
				<%=link_to technology do %>
					<div class="col-xs-6 system-list">
						<div class="col-xs-12 system-list-pic">
						<%= image_tag technology.try(:image).try(:avatar).try(:url, :c_250_190), width:"100%", class:"system_img" %>
						</div>
						<div class="col-xs-12 system-list-pictip">
						<div class="col-xs-5"><strong class="class-title"><%= technology.name %></strong></div>
						<div class="col-xs-3"><span><i class="system-icon iconfont">&#xe609;</i><%= technology.technology_stages.count %>个阶段</span></div>
						<div class="col-xs-4"><i class="system-icon iconfont">&#xe600;</i><span>12345人在学习</span></div>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>