<div class="container">
	<ol class="courses-bread breadcrumb">
	<span><i class="iconfont">&#xe60a;</i></span>
	<li><a href="#">课程中心</a></li>
	<li class="active">全部课程</li>
	</ol>
	<div class="row category">
		<div class="title-bar">
			<h4 class="text-center title">课程分类</h4>
			<div class="line"></div>
		</div>
		<div class="search-course">
			<div class="col-sm-3">
				<%= link_to courses_path, class: "link-lg active", param: "" do %>
				<i class="courses-iconfont iconfont">&#xe603;</i><span class="courses-cate">全部课程</span>
				<% end %>
			</div>
			<% @categories.each_with_index do |category, index|%>
				<div class="col-sm-3">
					<%= link_to courses_path(category_id: category.id), class: "link-lg no-active" do %>
					  <i class="courses-iconfont iconfont">&#xe607;</i><span class="courses-cate"><%= category.name %></span>
					<% end %>
				</div>
			<% end %>
		</div>
