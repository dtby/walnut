<div class="wrap">
	<div class="main-model">
		<div class="container">
			<div class="row">
				<div class="col-xs-5"><hr class="divide"></div>
				<div class="col-xs-2 text-center"><h2>面经搜索</h2></div>
				<div class="col-xs-5"><hr class="divide"></div>
			</div>
			<div class="row">
				<div class="col-xs-3 text-center">
					<select class="form-control">热门搜索</select>
				</div>
				<div class="col-xs-3 text-center">
					<select class="form-control">全部面经</select>
				</div>
				<div class="col-xs-6">
					<form class="form-horizontal">
						<div class="form-group">
							<div class="col-sm-10">
								<input type="email" class="form-control" id="inputEmail3" placeholder="Email">
							</div>
							<button type="submit" class="btn btn-primary">开始搜索
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<div class="main-model">
		<div class="container">
			<div class="row">
				<div class="col-xs-5"><hr class="divide"></div>
				<div class="col-xs-2 text-center"><h2>面试信息</h2></div>
				<div class="col-xs-5"><hr class="divide"></div>
			</div>



			<% @interviews.each do|interview|%>
			<div class="interview_info">
				<div class="media">
					<div class="media-left">
						<a href="#">
							<%=image_tag interview.try(:image_url).present? ? interview.try(:image_url) : "interviews_pic.png" %>
						</a>
					</div>
					<div class="media-body">
						<h3 class="media-heading"><%=interview.title %></h3>
						<p><%=interview.content %><%=link_to "[详细页面]", interview_path(interview)%></p>
						<span><span class="glyphicon glyphicon-user" aria-hidden="true" ></span>
						<span style="padding-right:20px">阅读人数</span> <%=interview.view_count %> 
						<span class="glyphicon glyphicon-star" aria-hidden="true" ></span>
						<span style="padding-right:10px;"> 收藏</span> 200</span>
					</div>
				</div>
			</div>
			<%end%>


			
		</div>
	</div>
	<div class="main-model text-center ">
		<%= paginate @interviews %>
	</div>
</div>

