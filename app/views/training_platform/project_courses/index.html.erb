		var scollHight = wnd - (head + searchTitle + subTitle + 21) - document.body.scrollTop;

		$(".scoll-part").height(scollHight);
		
		var chat = $(".ace_content_page_right").width();
		$(".addComment").width(chat);
	});
	$(document).ready(function(){
