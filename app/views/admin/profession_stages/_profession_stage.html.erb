<tr>
  <td><%= profession_stage.id %></td>
  <td><%= profession_stage.name %></td>
  <td><%= profession_stage.description %></td>
  <td><%= link_to "课程列表", "#" %></td>
  <td>
    <%= link_to edit_admin_profession_profession_stage_path(params[:profession_id], profession_stage), class: 'btn btn-xs btn-default', title: '编辑' do %>
      <span class="glyphicon glyphicon-edit"></span>
    <%end%>
    <%= link_to admin_profession_profession_stage_path(params[:profession_id], profession_stage), data:{ confirm: 'Are you sure?'},method: :delete, class: 'btn btn-xs btn-danger', title: '删除' do %>
      <span class="glyphicon glyphicon-trash"></span>
    <%end%>
  </td>
</tr>