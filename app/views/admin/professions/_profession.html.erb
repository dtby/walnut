<tr>
  <td><%= profession.id %></td>
  <td><%= profession.name %></td>
  <td><%= image_tag(profession.try(:image).try(:avatar), size: "130x70") %></td>
  <td><%= link_to "课程列表", "#" %></td>
  <td>
    <%= link_to edit_admin_profession_path(profession), class: 'btn btn-xs btn-default', title: '编辑' do %>
      <span class="glyphicon glyphicon-edit"></span>
    <%end%>
    <%= link_to admin_profession_path(profession), data:{ confirm: 'Are you sure?'},method: :delete, class: 'btn btn-xs btn-danger', title: '删除' do %>
      <span class="glyphicon glyphicon-trash"></span>
    <%end%>
  </td>
</tr>