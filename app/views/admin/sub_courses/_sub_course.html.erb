<tr>
  <td><%= image_tag(sub_course.try(:image).try(:avatar)) %></td>
  <td><%= sub_course.title %></td>
  <td><%= truncate(sub_course.description, length: 20) %></td>
  <% if sub_course.attachment && sub_course.attachment.file_url.present? %>
    <td><%= sub_course.attachment.file_url.to_s[0..10] if sub_course.attachment%></td>
  <% else %>
    <td><%= sub_course.attachment.content.to_s[0..10] if sub_course.attachment%></td>
  <% end %>
  <td>
    <%#= link_to [:admin, @course, sub_course], class: 'btn btn-xs btn-info', title: '查看' do %>
      <!-- <span class="glyphicon glyphicon-eye-open"></span>
    <%#end%> -->
    <%= link_to edit_admin_course_sub_course_path(@course, sub_course), class: 'btn btn-xs btn-default', title: '编辑' do %>
      <span class="glyphicon glyphicon-edit"></span>
    <%end%>
    <%= link_to admin_course_sub_course_path(@course, sub_course), data:{ confirm: 'Are you sure?'},method: :delete, class: 'btn btn-xs btn-danger', title: '删除' do %>
      <span class="glyphicon glyphicon-trash"></span>
    <%end%>
  </td>
</tr>