<%= simple_form_for([:admin, @train], html: {class: "form-horizontal"}) do |f| %>

  <div class="form-group">
    <%= f.label :title, '课程名称', class: 'col-sm-2 control-label' %>
  <div class="col-sm-9">
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  </div>

  <% if @train.image.present? %>
    <div class="form-group">
      <%= label_tag :image, '已上传图片', class: 'col-sm-2 control-label' %>
      <div class="col-sm-9 container">
        <%= image_tag(@train.try(:image).try(:avatar), size: "340x200") %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :image, '培训海报', class: 'col-sm-2 control-label' %>
    <div class="col-sm-9 container">
      <%= f.file_field :image, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :introduce, '课程介绍',class: 'col-sm-2 control-label'%>
    <div class="col-sm-9">
    <%= f.kindeditor :introduce, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :syllabus, '课程安排',class: 'col-sm-2 control-label'%>
    <div class="col-sm-9">
    <%= f.kindeditor :syllabus, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prospect, '就业前景',class: 'col-sm-2 control-label'%>
    <div class="col-sm-9">
    <%= f.kindeditor :prospect, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :characteristic, '课程特色',class: 'col-sm-2 control-label'%>
    <div class="col-sm-9">
    <%= f.kindeditor :characteristic, class: 'form-control' %>
    </div>
  </div>
  <div class="actions">
  <hr>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-6">
      <button class="btn btn-success" type="submit">
        <span class="glyphicon glyphicon-floppy-save">保存</span>
      </button>
    </div>
  </div>
<!--     <%= f.submit %> -->
  </div>
<% end %>
