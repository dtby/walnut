<%= content_for :nav do%>
  <li>
    <a href="#{admin_root_path}">后台</a>
  </li>
  <li><%= link_to "院校列表", admin_colleges_path %></li>
  <li class="active"><%= @college.name %></li>
  <li class="active">课程列表</li>
<%end%>

<%= content_for :toolbar do %>
  <div class="col-xs-12">
    <%= link_to new_courses_admin_college_path, 'data-no-turbolink' => true, class: 'btn btn-success' do %>
      <span class="glyphicon glyphicon-plus-sign"></span> 添加
    <%end%>
    <div class="col-xs-3 pull-right">
      <div class="form-group">
        <%= render partial: 'admin/common/keyword', locals: {path: ""} %>
      </div>
    </div>
  </div>
<%end%>

<hr></hr>
<table class="table table-hover table-bordered text-center table-condensed">
  <thead>
    <tr>
      <th class="text-center">序号</th>
      <th class="text-center">课程标题</th>
      <th class="text-center">主讲老师/所属院校/所属分类</th>
      <th class="text-center">访问量</th>
      <th class="text-center">子课程</th>
      <th class="text-center" colspan="2">操作</th>
    </tr>
  </thead>
  <tbody>
  <%= render @college_courses %>
  </tbody>
</table>
<%= paginate @college_courses %>