<% if user_signed_in? %>
	<li class="dropdown">
		<%= link_to(user_notifications_path, class: "dropdown-toggle", "data-toggle" => "dropdown", "aria-expanded" => "false", remote: true, format: :js, id: "notificationListLink") do %>
			<i class="icon-bell-alt icon-animated-bell">
				<% unread = current_user.user_notifications.unreads.count %>
				<% if unread > 0 %>
				<span class="badge-count"><%= unread %></span>
				<% end %>
			</i>
		<% end %>
		<ul id="notificationList" class="dropdown-menu notification-list">

    </ul>
	</li>
	<li>
		<%= link_to(my_courses_user_index_path) do %>
			<i class="icon-user"></i>&nbsp;&nbsp;<%= current_user.show_name %>
		<% end %>
	</li>
	<li>
		<%= link_to destroy_user_session_path, :method => :delete do %>
			<span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> 退出
		<% end %>
	</li>
<% else %>
	<li>
		<%= link_to(new_session_path(:user),remote: true, format: :js) do %>
			<%= image_tag "loginin.png", width: '18' %>&nbsp;&nbsp;登录
		<% end %>
	</li>
	<li>
		<%= link_to(new_registration_path(:user),remote: true, format: :js) do %>
			<%= image_tag "loginin.png", width: '18' %>&nbsp;&nbsp;注册
		<% end %>
	</li>
<% end %>