			<!-- 我的积分 -->
		<div class="row">
			<div class="col-md-offset-1 col-md-10 main-content">
				<h3>我的积分</h3>
				<div class="progress my-integral">
				  <div class="progress-bar my-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
