<%= render partial: "my_homehead" %>
<div class="main">
	<div class="container">
		<div class="row">
			<div class="col-md-offset-1 col-md-10 main-content content-text">
				<h3 class="main-title title-text">个人资料</h3>
				<div class="col-md-offset-1 col-md-2">
					<div class="my-hover">
						<%= image_tag @user.show_image, width: "138px" %>
						<div class="hover-text text-center"><%= @user.nickname %></div>
					</div>	
				</div>
				<div class="col-md-9">
					<div class="col-md-6 info-text">
						姓名：<%= @user.name %><br>
											<br>
						院系：<%= @user.department %>
					</div>
					<div class="col-md-6">
						性别：<%= @user.gender ? "男" : "女" %><br>
									 <br>
						专业：<%= @user.major %>
					</div>
					<div class="col-md-12">
						个性签名：<%= @user.signature %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(function(){
		$(".my-hover").mouseover(function(){
			$(".hover-text").fadeIn();
		}).mouseleave(function(){
			$(".hover-text").fadeOut();
		});
	})
</script>